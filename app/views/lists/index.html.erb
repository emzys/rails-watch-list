<div class="container mt-5 mb-5">
  <div class="d-flex align-items-center justify-content-between">
    <h1 class="mb-3">Movie lists</h1>
    <%= link_to new_list_path do %>
      <div class="add_list btn btn-info mb-3 px-3 py-2">
        <p class="m-0"><i class="fas fa-plus"></i> Add a list</p>
      </div>
    <% end %>
  </div>

    <% @lists.each do |list| %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= image_path "https://source.unsplash.com/200x200/?movie #{list.name}" %>')">
      <%= list.name %>
    <% end %>
  </div>
</div>
