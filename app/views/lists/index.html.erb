<div class="banner text-center">
			<div class="container">
        <div class="banner-text">
				<h1>WatchList</h1>
				<p>Just keep on watching</p>
        </div>
				<%= link_to new_list_path do %>
          <div class="add_list btn btn-info mb-3 px-3 py-2">
            <p class="m-0"><i class="fas fa-plus"></i> Add a list</p>
          </div>
        <% end %>
			</div>
</div>

<div class="container mt-5 mb-5">
  <div class="d-flex align-items-center justify-content-between" id="all-lists">
    <h1 class="mb-3">All WatchLists</h1>
    <%= link_to new_list_path do %>
      <div class="add_list btn btn-info mb-3 px-3 py-2">
        <p class="m-0"><i class="fas fa-plus"></i> Add a list</p>
      </div>
    <% end %>
  </div>
  <div class="cards">
    <% @lists.each do |list| %>
    <div class="list-card">
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= list.photo.attached? ? cl_image_path(list.photo.key) : "https://source.unsplash.com/600x300/?movie,#{list.name}" %>)">
      <%= list.name %>
      <%= link_to '', list_path(list), class: 'card-link'  %>
      </div>
    </div>
    <% end %>
  </div>
</div>

