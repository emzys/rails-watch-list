<div class="banner banner-subpage text-center">
			<div class="container mt-5">
				<h2>New bookmark</h2>
        <p>for <%= @list.name %></p>
			</div>
</div>

<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-12 col-sm-8 col-lg-6">
      <h1>Bookmark a movie</h1>
      <%= simple_form_for [@list, @bookmark] do |f| %>
        <%= f.association :movie, collection: @movies %>
        <%= f.input :comment %>
        <%= f.button :submit, class: 'add_list btn btn-info mt-3 px-3 py-1' %>
      <% end %>
    </div>
  </div>
</div>
